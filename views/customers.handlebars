<h1>Customers List</h1>

<div>
    <table>
        <thead>
            <th>First Name</th>
            <th>Last Name</th>
        </thead>
        {{#each customers}}
        <tr>
            <td>{{first_name}}</td>
            <td>{{last_name}}</td>
            <td><a href="/customer/{{id}}">Update</a></td>
            <td><button onclick="deleteCustomer({{id}})">Delete</button></td>
        </tr>
        {{/each}}        
    </table>
</div>

<div>
  <h2>Add new Customer</h2>
  <form id="add-customer" action="/customers" method="POST">
    First name:<br>
    <input type="text" name="fname_input" required><br>
    Last name:<br>
    <input type="text" name="lname_input" required><br><br>
    <input type="submit" value="Submit">
  </form>
</div>
