<h1>Customers</h1>

<div>
    <table>
        <thead>
            <th>First Name</th>
            <th>Last Name</th>
        </thead>
    </table>

    {{#each customer}}
    <tr>
        <td>{{first_name}}</td>
        <td>{{last_name}}</td>
        <td><a href="/customer/{{id}}">Update</a></td>
        <td><button onclick="deleteCustomer({{id}})">Delete</button></td>
    </tr>
    {{/each}}    
</div>